<div class="container">
    <div class="row p-5">

        <div class="billing-info-wrap">
            <h3 class="mb-3 mt-3">Edit Address</h3>
            {{#each address}}
            <form action="/edit-address" id="checkout-form" method="POST">
                <div class="row bg-light">
                    <div class="col-md-12">
                        <div class="form-row">
                            <div class=" form-group billing-info mb-4 col-md-6">
                                <label for="fname">First Name</label>
                                <input type="text" id="fname" name="FirstName" value="{{this.address.FirstName}}"
                                    minlength="4" />
                            </div>

                            <div class="form-group billing-info mb-4 col-md-6">
                                <label for="lname">Last Name</label>
                                <input type="text" id="lname" name="LastName" value="{{this.address.LastName}}" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group billing-info mb-4 col-md-12">
                                <label for="house">House Name</label>
                                <input type="text" id="house" name="House" value="{{this.address.House}}" minlength="4" />
                            </div>
                        </div>

                        <div class="form-row ">
                            <div class="form-group billing-info mb-4 col-md-12">
                                <label for="street">Street Address</label>
                                <input class="billing-address" placeholder="street name" value="{{this.address.Street}}"
                                    id="street" name="Street" type="text" minlength="4" />

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group billing-info mb-4 col-md-6">
                                <label for="city">Town / City</label>
                                <input type="text" id="city" name="Town" value="{{this.address.Town}}" minlength="4" />
                            </div>



                            <div class="form-group billing-info mb-4 col-md-6">
                                <label for="pin">Postcode / ZIP</label>
                                <input type="text" id="pin" name="PIN" value="{{this.address.PIN}}" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group billing-info mb-4 col-md-6">
                                <label for="phone">Phone</label>
                                <input type="text" id="phone" name="Mobile" value="{{this.address.Mobile}}" />
                            </div>



                            <div class="form-group billing-info mb-4 col-md-6">
                                <label for="email">Email Address</label>
                                <input type="email" id="email" value="{{this.address.Email}}" name="Email" />
                            </div>
                            <input type="text" name="User" value="{{this.address.User}}" hidden>
                            <input type="text" name="_id" value="{{this.address._id}}" hidden>
                        </div>

                    </div>
                </div>
                <div class=" text-center pt-3">
                    <input type="submit" class="btn" style="background: #a8741a;" value="Update">
                </div>
            </form>
            {{/each}}
        </div>
    </div>
</div>