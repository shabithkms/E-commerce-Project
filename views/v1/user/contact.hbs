{{!-- Contact form submission using ajax --}}
<script>
    $("#contact-form").submit((e) => {
        e.preventDefault()
        $.ajax({
            url: "https://script.google.com/macros/s/AKfycbw6u0yGG5Gg8_4FRY37z0EhKqW9UYTZUB6M-CqXlODJoKtrCxYlbIrFe6NYkfyHISEt/exec",
            data: $("#contact-form").serialize(),
            method: "post",
            success: function (response) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: 'Form submitted successfully',
                }).then(() => {
                   window.location.reload()
                })
            },
            error: function (err) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!',
                   
                })
            }
        })
    })
</script>