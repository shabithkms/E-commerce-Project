<div class="half">
    <div class="bg order-1 order-md-2" style="background-image: url('/adminLogin/images/bg_1.jpg');"></div>
    <ol class="breadcrumb">
        <li class="pr-3"><a href="/admin" style="text-decoration: none;">Home</a></li>
        <li class="pr-3"><a href="/admin/view-brands" style="text-decoration: none;">All Brands</a></li>
        <li class="active">Edit Brands</li>
    </ol>
    <div class="contents order-2 order-md-1">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-12">
                    <div class="text-center mb-5">
                        <h3>Edit <strong> Brand</strong></h3>

                    </div>
                    <form action="/admin/edit-brand/{{brand._id}}" method="POST" onsubmit="return submitFormBrand(this);"
                        enctype="multipart/form-data" style="padding-top: 40px;" id="edit-brand">


                        <div class="form-row">
                            <div class="form-group col-md-5">
                                <label for="inputName">Brand Name</label>
                                <input type="text" class="form-control" value="{{brand.brand}}" id="inputName"
                                    name="brand">
                            </div>


                            <div class="form-group col-md-7">
                                <label for="inputDescription">Description</label>
                                <input type="text" class="form-control" id="inputDescription"
                                    value="{{brand.description}}" name="description">
                            </div>
                        </div>



                        <div class="form-row  pb-3 ">
                            <div class="form-group mt-2 col-md-4 ml-2">
                                <label for="exampleFormControlFile1">Brand Logo</label>
                                <img src="/brandLogos/{{brand._id}}.jpg" style="width:100px;height:100px;"
                                    id="imgView"><br><br>
                                <input type="file" class="form-control" name="logo" id="exampleFormControlFile1"
                                    style="width: 250px;" accept="image/*" onchange="viewMainImage(event)">
                            </div>


                        </div>
                        <p class="text-warning text-center" style="display: none;" id="errMsg">Only Image is
                            Accepted</p>


                        <input type="submit" value="UPDATE" id='' class="btn  btn-primary mt-4">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>