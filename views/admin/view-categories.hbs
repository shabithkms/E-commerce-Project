<ol class="breadcrumb">
    <li class="pr-3"><a href="/admin" style="text-decoration: none;">Home</a></li>
    <li class="active">Categories</li>
</ol>

<table class="table " id="adminTable">
    <div class="row">
        <div class="col-md-6 mb-3">
            <a href="/admin/add-category" class="btn btn-primary ml-auto" style="margin-top: 20px;">Add New
                Category</a>
        </div>
    </div>
    <thead class="">
        <tr>
            <th scope="col">No</th>
            <th scope="col">Category Name</th>
            <th scope="col">Options</th>
            {{!-- <th scope="col">Image</th>
            <th scope="col">Handle</th> --}}
        </tr>
    </thead>
    <tbody>
        {{#each categories}}
        <tr>
            <td scope="row"></td>
            <td>{{this.category}}</td>
            <td>
                <a href="/admin/edit-category/{{this._id}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                {{!-- <a href="/admin/delete-category/{{this._id}}"
                    onclick="return confirm('Are you want to delete {{this.category}}?')"
                    class="btn-danger btn ml-1">Delete</a> --}}

                {{!-- <a href="/admin/delete-category/{{this._id}}" id="delete" class="btn btn-danger ml-1"><i class="fas fa-trash-alt"></i></a>  --}}

                <a class="btn btn-danger" href="/admin/delete-category/{{this._id}}" name="{{this.category}}"
                        onclick="deleteCategory(event)"><i class="fas fa-trash-alt"></i></a>
            </td>

        </tr>
        {{/each}}

    </tbody>
</table>

