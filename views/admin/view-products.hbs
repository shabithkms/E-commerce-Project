<div id="page-wrapper">
    <ol class="breadcrumb">
        <li class="pr-3"><a href="/admin" style="text-decoration: none;">Home</a></li>
        <li class="pr-3"><a href="" style="text-decoration: none;">Products</a></li>
        <li class="active">All Products</li>
    </ol>
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-4">
                <a href="/admin/add-product" class="btn btn-primary " style="margin-top: 20px;">Add New
                    Product</a>
            </div>
        </div>
        <table class="table table-striped mt-5" style="margin-top:30px;" id="adminTable">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Image</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td></td>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.category}}</td>
                    <td><img src="/productImages/{{this._id}}a.jpg" class="img-fluid" style="width: 50px;height:50px">
                    </td>
                    <td>
                        {{#if this.stockout}}
                        <span class="text-danger">Out of stock</span>
                        {{else}}
                        {{this.stock}}
                        {{/if}}
                    </td>
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary"><i
                                class="fas fa-edit"></i></a>
                        <a class="btn btn-danger" href="/admin/delete-product/{{this._id}}" name="{{this.name}}"
                            onclick="deleteproduct(event)"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>