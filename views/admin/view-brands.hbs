<ol class="breadcrumb">
    <li class="pr-3"><a href="/admin" style="text-decoration: none;">Home</a></li>
    <li class="active">Brands</li>
</ol>
<table class="table" id="adminTable">
    <div class="row">
        <div class="col-md-6 mb-3">
            <a href="/admin/add-brands" class="btn btn-primary ml-auto" style="margin-top: 20px;">Add New
                Brands</a>
        </div>
    </div>
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Logo</th>
            <th scope="col">Description</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        {{#each brands}}
        <tr>
            <td scope="row"></td>
            <td>{{this.brand}}</td>
            <td>
                <img style="height: 50px;width:50px" src="/brandLogos/{{this._id}}.jpg">
            </td>
            <td>{{this.description}}</td>
            <td><a href="/admin/edit-brand/{{this._id}}" class="btn btn-primary">Edit</a>
                <a href="/admin/delete-brand/{{this._id}}"
                    onclick="return confirm('Are you want to delete {{this.brand}}?')"
                    class="btn-danger btn ml-1">Delete</a>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>