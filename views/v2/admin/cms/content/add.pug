																	.col.d-flex.text-start.p-6
																		span.form-check.form-check-custom.form-check-solid.form-check-sm.align-items-start(data-kt-button='true')
																			input.form-check-input(type='radio' name=`${cf.field_name}[${brandLanguage.prefix}]` id="percentage" value=`true` )
																		span.ms-5
																			label.form-label(for="percentage") 
																.fv-plugins-message-container.invalid-feedback(id=`field-error-${cf.field_name}_${brandLanguage.prefix}`)
														else if cf.field_type === 'select'
															select.form-select(data-control='select2' name=`${cf.field_name}[${brandLanguage.prefix}]` data-placeholder='Select an option')
																option
																each dropdown, dd_i in cf.values
																	option(value=`${dropdown.value}`) #{dropdown.key[brandLanguage.prefix]}
															.fv-plugins-message-container.invalid-feedback(id=`field-error-${cf.field_name}_${brandLanguage.prefix}`)

											//- END::Custom Fields with Bilingual


											if reqContentType.hide_meta == false
												h3 Meta Fields
												.d-flex.flex-column.mb-8.fv-row.fv-plugins-icon-container
													// begin::Label
													label.d-flex.align-items-center.fs-6.fw-semibold.mb-2
														span.required Title
														i.fas.fa-exclamation-circle.ms-2.fs-7(data-bs-toggle='tooltip' aria-label='Specify a target name for future usage and reference' data-kt-initialized='1')
													// end::Label
													input.form-control.form-control-solid(type='text' placeholder='Enter Meta Title' name=`meta_title[${brandLanguage.prefix}]`)
													.fv-plugins-message-container.invalid-feedback(id=`field-error-meta_title_${brandLanguage.prefix}`)
												.d-flex.flex-column.mb-8.fv-row.fv-plugins-icon-container
													// begin::Label
													label.d-flex.align-items-center.fs-6.fw-semibold.mb-2
														span.required Description
														i.fas.fa-exclamation-circle.ms-2.fs-7(data-bs-toggle='tooltip' aria-label='Specify a target name for future usage and reference' data-kt-initialized='1')
													// end::Label
													textarea.form-control.form-control-solid(type='text' placeholder='Enter Meta Description' name=`meta_description[${brandLanguage.prefix}]`)
													.fv-plugins-message-container.invalid-feedback(id=`field-error-meta_description_${brandLanguage.prefix}`)
												.d-flex.flex-column.mb-8.fv-row.fv-plugins-icon-container
													// begin::Label
													label.d-flex.align-items-center.fs-6.fw-semibold.mb-2
														span.required Keywords
														i.fas.fa-exclamation-circle.ms-2.fs-7(data-bs-toggle='tooltip' aria-label='Specify a target name for future usage and reference' data-kt-initialized='1')
													// end::Label
													textarea.form-control.form-control-solid(type='text' placeholder='Enter Meta Keywords (comma(,) seperated)' name=`meta_keywords[${brandLanguage.prefix}]`)
													.fv-plugins-message-container.invalid-feedback(id=`field-error-meta_keywords_${brandLanguage.prefix}`)
