block content
	.d-flex.flex-column.flex-column-fluid
		#kt_app_toolbar.app-toolbar.py-3.py-lg-6
			#kt_app_toolbar_container.app-container.container-xxl.d-flex.flex-stack
				.page-title.d-flex.flex-column.justify-content-center.flex-wrap.me-3
					h1.page-heading.d-flex.text-dark.fw-bold.fs-3.flex-column.justify-content-center.my-0
						| Notification Settings
					ul.breadcrumb.breadcrumb-separatorless.fw-semibold.fs-7.my-0.pt-1
						li.breadcrumb-item.text-muted
							a.text-muted.text-hover-primary(href='/admin/dashboard') Home
						li.breadcrumb-item
							span.bullet.bg-gray-400.w-5px.h-2px
						li.breadcrumb-item.text-muted Settings
						li.breadcrumb-item
							span.bullet.bg-gray-400.w-5px.h-2px
						li.breadcrumb-item.text-muted Notification
				//- .d-flex.align-items-center.gap-2.gap-lg-3
					a.btn.btn-sm.fw-bold.btn-primary(href='#' data-bs-toggle='modal' data-bs-target='#kt_modal_create_app') Add New

		#kt_app_content.app-content.flex-column-fluid
			#kt_app_content_container.app-container.container
				.row.g-5.g-xl-10.mb-xl-10
					.col-lg-12
						.card.mb-5.pb-4
							.card-header
								h3.card-title Mailgun Settings
								.card-toolbar 
									a.btn.btn-sm.btn-primary(href=`/admin/settings/notification/edit/mailgun`) Edit
							.card-body
								h5 From Mail address
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.mailgun.from || "Nil"}
								h5 Domain
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.mailgun.domain || "Nil"}
								h5 API Key
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.mailgun.api_key || "Nil"}
								h5 OTP Template
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.mailgun.otp_template || "Nil"}
								h5 Forgot Password Template
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.mailgun.forgot_password_template || "Nil"}
								h5 Forgot Password Thankyou Template
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.mailgun.forgot_password_thankyou_template || "Nil"}
								h5 Order Complete Template
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.mailgun.order_complete_template || "Nil"}
								h5 Welcome Template
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.mailgun.welcome_template || "Nil"}
						.card.mb-5.pb-4
							.card-header
								h3.card-title Communication Channels
								.card-toolbar 
									a.btn.btn-sm.btn-primary(href=`/admin/settings/notification/edit/communication_channels`) Edit
							.card-body
								h5 To Mail address
									span.badge.badge-light-warning Birthday & Contact from submission data will receive here.
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.communication_channels.email || "Nil"}
						.card.mb-5.pb-4
							.card-header
								h3.card-title SMS Settings
								.card-toolbar 
									a.btn.btn-sm.btn-primary(href=`/admin/settings/notification/edit/sms`) Edit
							.card-body
								h5  Sender ID
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.sms.sender_id || "Nil"}
								h5  Username
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.sms.username || "Nil"}
								h5  password
								.text-gray-500.fw-semibold.fs-5.mb-5 !{data.sms.password || "Nil"}







