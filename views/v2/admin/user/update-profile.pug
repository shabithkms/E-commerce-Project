block content
	.d-flex.flex-column.flex-column-fluid
		#kt_app_toolbar.app-toolbar.py-3.py-lg-6
			#kt_app_toolbar_container.app-container.container-xxl.d-flex.flex-stack
				.page-title.d-flex.flex-column.justify-content-center.flex-wrap.me-3
					h1.page-heading.d-flex.text-dark.fw-bold.fs-3.flex-column.justify-content-center.my-0 Account Settings
					ul.breadcrumb.breadcrumb-separatorless.fw-semibold.fs-7.my-0.pt-1
						li.breadcrumb-item.text-muted
							a.text-muted.text-hover-primary(href='/admin/dashboard') Dashboard
						li.breadcrumb-item
							span.bullet.bg-gray-400.w-5px.h-2px
						li.breadcrumb-item.text-muted Account 
							span.bullet.bg-gray-400.w-5px.h-2px
						li.breadcrumb-item.text-muted Profile Update
		#kt_app_content.app-content.flex-column-fluid
			#kt_app_content_container.app-container.container-xxl
				.card.mb-5.mb-xl-10
					.card-header.border-0.cursor-pointer(role='button' data-bs-toggle='collapse' data-bs-target='#kt_account_profile_details' aria-expanded='true' aria-controls='kt_account_profile_details')
						.card-title.m-0
							h3.fw-bold.m-0 Profile Update
					#kt_account_settings_profile_details.collapse.show
						form#kt_account_profile_details_form.form.es-form(action=`/admin/user/update-profile` data-kt-redirect-url=`/admin/user`  method='post' autocomplete="off")
							.card-body.border-top.p-9
								.row.mb-6
									label.col-lg-4.col-form-label.required.fw-semibold.fs-6 Name
									.col-lg-8
										.row
											.col-lg-12.fv-row
												input.form-control.form-control-lg.form-control-solid.mb-3.mb-lg-0(type='text' name='name' placeholder='First name' value=`${userDetails.name}`)
												.fv-plugins-message-container.invalid-feedback(id=`field-error-name`)
								.row.mb-6
									label.col-lg-4.col-form-label.required.fw-semibold.fs-6 Email
									.col-lg-8.fv-row
										input.form-control.form-control-lg.form-control-solid(type='text' name='email' placeholder='Company name' value=`${userDetails.email}`)
										.fv-plugins-message-container.invalid-feedback(id=`field-error-email`)
								.row.mb-6
									label.col-lg-4.col-form-label.fw-semibold.fs-6
										span.required Current Password
										i.fas.fa-exclamation-circle.ms-1.fs-7(data-bs-toggle='tooltip' title='Current password should be enter to update profile details')
									.col-lg-8.fv-row
										input.form-control.form-control-lg.form-control-solid(type='password' name='password' placeholder='Current Password' value='' autocomplete="new-password")
										.fv-plugins-message-container.invalid-feedback(id=`field-error-password`)
							.card-footer.d-flex.justify-content-end.py-6.px-9
								button#kt_account_profile_details_submit.btn.btn-primary.form-submit-btn(type='submit') 
									span.preloader.d-none
										| Updating
									span.label
										| Save Changes