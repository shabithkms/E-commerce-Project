<link href='https://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>

<style>
    .glass {
        width: 235px;
        height: 235px;
        position: absolute;
        border-radius: 50%;
        cursor: crosshair;

        /* Multiple box shadows to achieve the glass effect */
        box-shadow:
            0 0 0 7px rgba(255, 255, 255, 0.85),
            0 0 7px 7px rgba(0, 0, 0, 0.25),
            inset 0 0 40px 2px rgba(0, 0, 0, 0.25);

        /* hide the glass by default */
        display: none;
    }

    .carousel-inner img {
        width: 100%;
        height: 100%
    }

    #custCarousel .carousel-indicators {
        position: static;
        margin-top: 20px
    }

    #custCarousel .carousel-indicators>li {
        width: 100px
    }

    #custCarousel .carousel-indicators li img {
        display: block;
        opacity: 0.5
    }

    #custCarousel .carousel-indicators li.active img {
        opacity: 1
    }

    #custCarousel .carousel-indicators li:hover img {
        opacity: 0.75
    }

    .carousel-item img {
        width: 80%
    }
</style>
<div class="breadcrumb-area ptb-170"
    style="background-size: cover;background-image: url(/images/watchImages/Banner1.jpg)">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul class="breadcrumb-list mr-5">
                <li>
                    <a href="/" title="Back to the home page">Home</a>
                </li>
                <li>
                    <span>{{product.name}}</span>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="product-details neha_pr_dt">
    <div class="container p-0">
        <div class="row">
            <div class="col-md-6">
                <div id="custCarousel" class="carousel slide" data-ride="carousel" align="center">
                    <!-- slides -->
                    <div class="carousel-inner">
                        <div class="carousel-item active"> <img src="/productImages/{{product._id}}a.jpg"
                                class="d-block  magniflier" alt="Hills">
                        </div>
                        <div class="carousel-item"> <img src="/productImages/{{product._id}}b.jpg"
                                class="d-block  magniflier" alt="Hills"> </div>
                        <div class="carousel-item"> <img src="/productImages/{{product._id}}c.jpg"
                                class="d-block  magniflier" alt="Hills"> </div>
                        <div class="carousel-item"> <img src="/productImages/{{product._id}}d.jpg"
                                class="d-block  magniflier" alt="Hills"> </div>
                    </div> <!-- Left right --> <a class="carousel-control-prev" href="#custCarousel" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span> </a> <a class="carousel-control-next"
                        href="#custCarousel" data-slide="next"> <span class="carousel-control-next-icon"></span>
                    </a>
                    <!-- Thumbnails -->
                    <ol class="carousel-indicators list-inline">
                        <li class="list-inline-item active"> <a id="carousel-selector-0" class="selected"
                                data-slide-to="0" data-target="#custCarousel"> <img
                                    src="/productImages/{{product._id}}a.jpg" class=" img-fluid">
                            </a> </li>
                        <li class="list-inline-item"> <a id="carousel-selector-1" data-slide-to="1"
                                data-target="#custCarousel"> <img src="/productImages/{{product._id}}b.jpg"
                                    class="img-fluid">
                            </a> </li>
                        <li class="list-inline-item"> <a id="carousel-selector-2" data-slide-to="2"
                                data-target="#custCarousel"> <img src="/productImages/{{product._id}}c.jpg"
                                    class="img-fluid">
                            </a> </li>
                        <li class="list-inline-item"> <a id="carousel-selector-2" data-slide-to="3"
                                data-target="#custCarousel"> <img src="/productImages/{{product._id}}d.jpg"
                                    class="img-fluid">
                            </a> </li>
                    </ol>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-12">
                <div class="product-details-content ">
                    <div class="inner-wrapper-sticky">
                        <h3>{{product.name}}</h3>

                        <div class="rating-number">
                            <div class="quick-view-rating">
                                <span class="shopify-product-reviews-badge" data-id="1310201413721"></span>
                            </div>
                        </div>
                        <div class="details-price">
                            {{#if product.offer}}
                            <div class="details-price">
                                <span id="ProductPrice"><span class=money>₹{{product.price}}</span></span>

                                <del><span id="ComparePrice"><span
                                            class=money>₹{{product.actualPrice}}</span></span></del>

                            </div>
                            {{else}}
                            <div class="details-price">
                                <span id="ProductPrice"><span class=money>₹{{product.price}}</span></span>


                            </div>
                            {{/if}}

                        </div>
                        <div>
                            {{#if product.offer}}
                            <div>
                                {{#if product.proOfferPercentage}}
                                <strong><span class="sale mb-3">{{product.proOfferPercentage}}% OFF</strong> for this
                                Product</span>
                                {{else}}
                                <strong><span class="sale mb-3">{{product.catOfferercentage}}% OFF</strong> for this
                                Category</span>
                                {{/if}}
                            </div>
                            {{else}}
                            {{/if}}
                        </div>
                        <p>A watch is a portable timepiece intended to be carried or worn by a person. ... During most
                            of its history the watch was a mechanical device, driven by clockwork, powered by winding a
                            mainspring, and keeping time with an oscillating balance wheel. These are called mechanical
                            watches.</p>
                        <form action="" method="post" enctype="multipart/form-data" id="add-item-form">

                            <div class="quickview-plus-minus">

                                <div class="quickview-btn-cart">

                                    {{#if product.stockout}}
                                    <p class="text-danger text-center">Out of Stock</p>
                                    {{else}}
                                    <a class="btn-hover-black addtocart cart-item"
                                        onclick="addToCart('{{product._id}}','{{product.stock}}')" data-toggle="tooltip"
                                        title="add to cart">
                                        <i class="ion-ios-loop-strong animated rotateIn infinite"></i>
                                        <i class="ion-android-done"></i> add to cart
                                    </a>
                                    <a class="btn-hover-black addtocart cart-item" href="/buyNow/{{product._id}}"
                                        data-toggle="tooltip" title="add to cart">
                                        <i class="ion-ios-loop-strong animated rotateIn infinite"></i>
                                        <i class="ion-android-done"></i>Buy Now
                                    </a>
                                    {{/if}}
                                </div>
                                <div class="quickview-btn-wishlist">
                                    <a class="btn-hover list-btn-wishlist animate-left" href=""
                                        onclick="addToWishlist('{{product._id}}',event)" title="Wishlist">
                                        <i class="ion-ios-heart-outline"></i>
                                    </a>
                                </div>
                            </div>
                        </form>
                        <div class="product-categories product-cat-tag">
                            <ul>
                                <li class="categories-title">Category :</li>
                                <li><a>{{product.category}}</a></li> <br>
                                <li>100% Original Products</li> <br>
                                <li>Cash on delivery might be available</li>
                            </ul>
                        </div>
                        <div class="product-tags product-cat-tag">
                            <ul>
                                <li class="categories-title text-dark">Product details:</li> <br>
                                <li><a>Pack Contains: single watch</li> <br>
                                <li><a>Movement: quartz</a></li> <br>
                                <li><a>Power Source: battery</a></li> <br>
                                <li><a>Water resistance: 100 m</a></li> <br>
                                <li><a>Comes in a signature {{product.brand}} case</a></li> <br>
                                <li><a>Warranty: 2 years</a></li> <br>
                                <li><a>Warranty provided by Brand Owner / Manufacturer</a></li> <br>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .product-details.neha_pr_dt {
        padding-top: 100px;
        padding-bottom: 90px;
        margin-bottom: 0px;
    }
</style>
<div class="mt-3 mb-5">
    <center>
        <h3>
            <strong>RELATED PRODUCTS</strong>
        </h3>
    </center>
</div>
<div class="container tab-content jump mb-4">
    <div class="row">
        <div class="rhs_product_tab rhs_match_height">
            {{#each nameProducts}}
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <div class="single-product mb-35">
                    <div class="product-img">
                        <a href="/product/{{this._id}}">
                            <img src="/productImages/{{this._id}}a.jpg" alt="">
                        </a>
                        <div class="product-action">
                            <a class="animate-left" href="" onclick="addToWishlist('{{this._id}}',event)"
                                title="Wishlist">
                                <i class="ion-ios-heart-outline"></i>
                            </a>
                        </div>
                    </div>

                    <div class="product-content">
                        <div class="product-title-price">
                            <div class="product-title">
                                <h4><a href="#">{{this.name}}</a>
                                </h4>
                            </div>
                        </div>

                        <div class="product-cart-categori">

                            <div class="product-cart">
                                <span>{{this.category}}</span>
                            </div>
                            <div class="product-price">

                                {{#if this.offer}}
                                <div class="product-price">
                                    <span class="price--sale"><span class=money>₹
                                            {{this.price}}</span></span>
                                    <span><del><span class=money>₹
                                                {{this.actualPrice}}</span></del></span>

                                </div>
                                {{else}}
                                <div class="product-price">
                                    <span class="price--sale"><span class=money>₹
                                            {{this.price}}</span></span>
                                </div>
                                {{/if}}
                            </div>
                            <div class="product-categori">

                                {{#if this.stockout}}
                                <span class="text-danger">Out of stock</span>
                                {{else}}
                                <button class="add_cart btn btn-light cart-item "
                                    style="width: 130px; border: 1px solid black !important;"
                                    onclick="addToCart('{{this._id}}','{{this.stock}}')" title="Add to cart">

                                    <i class="ion-bag"></i>
                                    <i class="ion-ios-loop-strong animated rotateIn infinite"></i>
                                    <i class="ion-android-done"></i> Add to Cart
                                </button>
                                <br>
                                <a class="add_cart btn btn-light cart-item mt-1" href="/buyNow/{{this._id}}"
                                    style="width: 130px; border: 1px solid black !important;">

                                    <i class="ion-bag"></i>
                                    <i class="ion-ios-loop-strong animated rotateIn infinite"></i>
                                    <i class="ion-android-done"></i> Buy Now
                                </a>
                                {{/if}}

                            </div>

                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script>
    jQuery(document).ready(function ($) {
        var alterClass = function () {
            var ww = document.body.clientWidth;
            if (ww < 1000) {
                $('#zoom').removeClass('glass');
            } else if (ww >= 1001) {
                $('#zoom').addClass('glass');
            };
        };
        $(window).resize(function () {
            alterClass();
        });
        //Fire it when the page first loads:
        alterClass();
    });
</script>