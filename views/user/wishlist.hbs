<style>
    body {
        min-height: 100vh;
        background-size: cover;
        font-family: 'Lato', sans-serif;
        color: rgba(116, 116, 116, 0.667);

    }

    .container-fluid {
        margin-top: 200px
    }

    p {
        font-size: 14px;
        margin-bottom: 7px
    }

    .small {
        letter-spacing: 0.5px !important
    }



    hr {
        background-color: rgba(248, 248, 248, 0.667)
    }

    .bold {
        font-weight: 500
    }

    .change-color {
        color: #a8741a !important
    }

    .card-2 {
        box-shadow: 1px 1px 3px 0px rgb(112, 115, 139)
    }

    .fa-circle.active {
        font-size: 8px;
        color: #a8741a
    }

    .fa-circle {
        font-size: 8px;
        color: #aaa
    }

    .rounded {
        border-radius: 2.25rem !important
    }

    .progress-bar {
        background-color: #AB47BC !important
    }

    .progress {
        height: 5px !important;
        margin-bottom: 0
    }

    .invoice {
        position: relative;
        top: -70px
    }

    .Glasses {
        position: relative;
        top: -12px !important
    }

    .card-footer {
        background-color: #AB47BC;
        color: #fff
    }

    h2 {

        letter-spacing: 2px !important
    }

    .display-3 {
        font-weight: 500 !important
    }

    @media (max-width: 479px) {
        .invoice {
            position: relative;
            top: 7px
        }

        .border-line {
            border-right: 0px solid rgb(226, 206, 226) !important
        }
    }

    @media (max-width: 700px) {
        h2 {
            
            font-size: 17px
        }

        .display-3 {
            font-size: 28px;
            font-weight: 500 !important
        }

        .cat {
            display: :none !important;
        }

    }

    @media screen and (max-width: 76px) {
        div.cat {
            display: none;
        }
    }



    .card-footer small {
        letter-spacing: 7px !important;
        font-size: 12px
    }

    .border-line {
        border-right: 1px solid rgb(226, 206, 226)
    }

    .card {
        display: flex;
        flex-direction: row;
    }
</style>

<div class="container-fluid my-5  pb-5">
    <div class="text-center"><h3>WISHLIST</h3></div>
    <div class="card card-1 col-md-12 row">



        {{#each wishlistProducts}}
        <div class="card-body col-md-6">

            <div class="row">
                <div class="col">
                    <div class="card card-2">
                        <div class="card-body">
                            <div class="media row">
                                <div class="sq align-self-center col-md-3"> <img
                                        class="img-fluid my-auto align-self-center mr-2 mr-md-4 pl-0 p-0 m-0"
                                        src="/productImages/{{this.product._id}}a.jpg" width="100" height="100" />
                                </div>
                                <div class="col  col-md-7">
                                    <div class="col-md-6  ">
                                        <div class=" ">
                                            <h7 class="mb-0" style="color: black;">{{this.product.name}}</h7> <br>

                                            <h6 class="mb-0"><span>Price :</span> &#8377;{{this.product.price}}</h6>
                                        </div>


                                    </div>
                                    <div class="d-flex mt-4 col-md-6">
                                        <div class="ml-auto ">
                                            <a href="/buyNow/{{this.product._id}}" class="btn btn-hover-black"
                                                style="background: #a8741a;">Buy
                                                Now</a>
                                        </div>
                                        <div class="">
                                            <button onclick="addToCart('{{this.product._id}}')"
                                                class="btn ml-1  btn-hover-black" style="background: #a8741a;">Add to
                                                cart</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <button onclick="deleteWishlistPro('{{this.product._id}}')">
                                        <i class="fas fa-trash-alt mt-4 " style="color: red;font-size: 20px;"></i>
                                    </button>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>


        </div>
        {{/each}}

    </div>
</div>