<div class="cart-main-area pt-100px pb-100px">
    <div class="container">
        <h3 class="cart-page-title">Your cart items</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">

                <div class="table-content table-responsive cart-table-content">
                    <table>
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>

                                <th>Qty</th>
                                <th>Subtotal</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            {{#products}}
                            <tr id="{{this._id}}row">

                                <td class="product-thumbnail">
                                    <img class="img-responsive ml-3" src="/productImages/{{this.product._id}}a.jpg"
                                        alt="" style="width: 100px; height: 100px;" />
                                </td>
                                <td class="product-name">{{this.product.name}}
                                    <br>
                                    Price: {{this.product.price}}
                                </td>



                                <td class="product-quantity">

                                    {{!-- <a class="btn btn-danger text-center pb-2 mr-3"
                                        style="width: 30px;height:30px;"
                                        onclick="changeQty('{{this._id}}','{{this.product._id}}','{{../userBtn._id}}',-1)">-</a>
                                    <span id="{{this.product._id}}">{{this.quantity}}</span><button
                                        class="btn btn-success text-center ml-3 p-2" style="width: 30px;height:30px;"
                                        onclick="changeQty('{{this._id}}','{{this.product._id}}','{{../userBtn._id}}',1)">+</button>
                                    --}}

                                    <button class="mr-3"
                                        onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)">-</button>
                                    <span id="{{this.product._id}}"> {{this.quantity}}</span>
                                    <button class="ml-3"
                                        onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)">+</button>
                                </td>
                                {{#each ../subTotals}}
                                <td class="product-subtotal">{{total}}</td>
                                {{/each}}


                                <td class="">

                                    {{!-- <a class="" style="width: fit-content;"
                                        href="/delete-cart-product/{{this._id}}/{{this.product._id}}"><i
                                            class="fas fa-trash-alt " style="color: red;font-size: 20px;"></i></a> --}}
                                    <button onclick="deleteCartPro('{{this._id}}','{{this.product._id}}')">
                                        <i class="fas fa-trash-alt " style="color: red;font-size: 20px;"></i>
                                    </button>

                                </td>
                            </tr>
                            {{/products}}

                        </tbody>
                    </table>
                </div>

                {{#totals}}
                <div class="row mt-5">
                    <div class="col-lg-4 col-md-12 mt-md-30px">
                        <div class="grand-totall">
                            <div class="title-wrap">
                                <h4 class="cart-bottom-title section-bg-gary-cart">Cart Total</h4>
                            </div>
                            <h5 class="pb-2"> <span></span></h5>

                            <h4 class="grand-totall-title">Grand Total Rs. <span id="total">{{this.total}}</span></h4>
                            <a href="/checkout" style="text-decoration: none;">Proceed to Checkout</a>
                        </div>
                    </div>
                </div>
                {{/totals}}
            </div>
        </div>
    </div>
</div>
